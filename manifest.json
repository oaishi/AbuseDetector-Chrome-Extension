{
	"manifest_version": 2,
	"name": "AbuseDetector",
	"description": "Abuse Detection Plugin for Gmail and Twitter",
	"version": "1.0",
	"permissions": [
		"tabs",
		"http://127.0.0.1:8000/",
		"https://*.ngrok.io/*",
		"http://*.ngrok.io/*",
		"background",
        "identity",
        "notifications",
        "storage",
        "alarms",
        "https://www.googleapis.com/*",
        "https://*.googleusercontent.com/*"
	],
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/icon48.png",          
			"38": "img/icon48.png"          
		},
		"default_popup": "popup.html"
	},
	"options_page": "options/dashboard.html",
	"background": {
    "scripts": ["js/background.js"],
    "persistent": false
	},
	"content_security_policy": "script-src 'self' https://*.google.com 'unsafe-eval'; object-src 'self'",
	"oauth2": {
        "client_id": "<OAUTH_ID>.apps.googleusercontent.com",
        "scopes": [
            "profile",
			"email",
            "https://www.googleapis.com/auth/gmail.readonly",
			"https://www.googleapis.com/auth/gmail.send"
        ]
    },
	"key":""
}
